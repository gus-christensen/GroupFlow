<h2 class="text-c ">Sign up:</h2>

<% if @errors %>
  <p class="block c-firebrick max-w-700">Something went wrong...</br>
  <% @errors.each do |e| %>
    <div class="block c-firebrick max-w-700 w-66 pad-s-1"><%= e %></div></br>
  <% end %>
<% end %></p>

<form action="/users" method="post">
  <input type="text" class="block w-100 round-1 max-w-150 text-c center" name="email" placeholder="email"/>
  <input type="password" class="block w-100 round-1 max-w-150 text-c center" name="password1" placeholder="password"/>
  <input type="password" class="block w-100 round-1 max-w-150 text-c center" name="password2" placeholder="reenter password"/>
  <input type="submit" class="block w-100 pad-1 round-1 max-w-150 text-c center t-pink bg-mintcream" value="register">
</form></br>
